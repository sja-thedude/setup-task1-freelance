{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "testHelper": true,
        "app": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-var": "warn",
        "prefer-const": "warn",
        "no-console": "off",
        "global-require": "off",
        "indent": [
            "warn",
            4,
            {
                "MemberExpression": 1,
                "SwitchCase": 1,
                "VariableDeclarator": 2
            }
        ],
        "linebreak-style": ["off", "unix"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ]
    }
}
